<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns = "http://www.springframework.org/schema/beans"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns:context="http://www.springframework.org/schema/context"
xsi:schemaLocation="http://www.springframework.org/schema/beans">

    <context:property-placeholder location="classpath:Castle.properties"/>

    <bean id="zamek" class="pl.SpringBootCourse.slawSpring.domain.Castle" init-method="momentAfterCreateBean"
          destroy-method="momentBeforeDeleteBean">
        <constructor-arg index="0" ref="knight"/>
        <property name="name" value="${my.castle.name:slaw castle}"/>
    </bean>

</beans>